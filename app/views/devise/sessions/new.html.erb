<div class="container">
<div class="row" id="home">
<!--Second column-->
                        <div class="col-md-6 col-md-offset-3 wow fadeInRight" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInRight;">
                            <!--Form-->
                            <div class="card">
                                <div class="card-block">
                                    <!--Header-->
                                    <div class="text-xs-center">
                                        <h3><i class="fa fa-user"></i> Register with:</h3>
                                        

                                        <%= link_to "Facebookログイン", user_facebook_omniauth_authorize_path, class:" btn-lg btn-fb waves-effect waves-light" %>
                                      
                                       <!--  <a href="https://twitter.com/MDBootstrap" target="_blank" class="btn-floating btn-small btn-tw waves-effect waves-light"><i class="fa fa-twitter"> </i></a> -->
                                       
                                        <hr>

                                        <h3>or:</h3>
                                    </div>
                                   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                    <!--Body-->
                                    <div class="md-form">
                                        <i class="fa fa-envelope prefix"></i>
                                         <%= f.label :email %><br />
                                        <%= f.email_field :email,:class => 'form-control', autofocus: true %>
   
                                    </div>

                                    <div class="md-form">
                                        <i class="fa fa-lock prefix"></i>
                                        
                                           <%= f.label :password %><br />
                              <%= f.password_field :password, :class => 'form-control', autocomplete: "off" %>
                                          
                                    </div>
                                    


                                    <% if devise_mapping.rememberable? -%>
                                      <div class="form-group">
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :ログイン情報を記憶しますか？ %>
                                      </div>
                                    <% end -%>



                                    <div class="text-xs-center">
                                        <%= f.submit "Log in", :class => 'btn btn-sign-up btn-lg waves-effect waves-light' %>
                                        <hr>
                                        <fieldset class="form-group">
                                            <input type="checkbox" id="checkbox1">
                                            <label for="checkbox1">Subscribe me to the newsletter</label>
                                        </fieldset>
                                    </div>
                                      
                                    <% end %>

                                    <div class="text-xs-center">
                                    <%= render "devise/shared/links" %>
                                    </div>
                                </div>
                            </div>
                            <!--/.Form-->
                        </div>
                        <!--/Second column-->



</div>
</div>

